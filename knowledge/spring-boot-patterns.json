      "description": "Transaction management patterns",
      "declarative": {
        "description": "@Transactional annotation",
        "attributes": {
          "readOnly": "readOnly = true for queries",
          "propagation": "REQUIRED, REQUIRES_NEW, etc.",
          "isolation": "READ_COMMITTED, SERIALIZABLE, etc.",
