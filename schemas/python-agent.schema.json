{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cursor-agent-factory.dev/schemas/python-agent.schema.json",
    "title": "Python Agent Metadata Schema",
    "description": "Schema for Python agent file metadata (embedded as module docstring YAML)",
    "type": "object",
    "required": [
        "name",
        "description",
        "version",
        "domain",
        "base_class",
        "tools",
        "knowledge",
        "workflows",
        "blueprints"
    ],
    "additionalProperties": true,
    "properties": {
        "name": {
            "type": "string",
            "minLength": 3,
            "description": "Unique Python agent identifier"
        },
        "description": {
            "type": "string",
            "minLength": 20,
            "description": "What this agent does"
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "domain": {
            "type": "string",
            "enum": [
                "rag",
                "trading",
                "api",
                "orchestration",
                "data",
                "business",
                "ai-ml",
                "testing"
            ],
            "description": "Primary domain"
        },
        "base_class": {
            "type": "string",
            "description": "Parent class this agent extends"
        },
        "tools": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "description": "Tools this agent uses (use ['none'] if no tools)"
        },
        "knowledge": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "description": "Knowledge files this agent references"
        },
        "workflows": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "description": "Workflows this agent participates in (use ['none'] if standalone)"
        },
        "blueprints": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "description": "Blueprints that include this agent"
        },
        "dependencies": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Python package dependencies"
        }
    }
}