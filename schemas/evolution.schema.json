{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "evolution-schema",
    "title": "Ecosystem Evolution Protocol Schema",
    "type": "object",
    "required": [
        "id",
        "name",
        "version",
        "lifecycle_stages",
        "memory_promotion_rules",
        "governance"
    ],
    "properties": {
        "id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "lifecycle_stages": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": [
                    "description",
                    "constraints"
                ],
                "properties": {
                    "description": {
                        "type": "string"
                    },
                    "constraints": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "promotion_criteria": {
                        "type": "object"
                    }
                }
            }
        },
        "memory_promotion_rules": {
            "type": "object"
        },
        "governance": {
            "type": "object"
        }
    }
}
