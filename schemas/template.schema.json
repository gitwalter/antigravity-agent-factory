{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cursor-agent-factory.dev/schemas/template.schema.json",
    "title": "Template Metadata Schema",
    "description": "Schema for template header metadata (embedded in .j2/.tmpl files as comment)",
    "type": "object",
    "required": [
        "name",
        "description",
        "version",
        "category",
        "variables",
        "produces",
        "used_by_skills",
        "used_by_blueprints"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "minLength": 3,
            "description": "Template name matching filename"
        },
        "description": {
            "type": "string",
            "minLength": 20,
            "description": "What this template generates"
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "category": {
            "type": "string",
            "enum": [
                "agents",
                "graphs",
                "memory",
                "rag",
                "tests",
                "tools",
                "ai",
                "python",
                "docs",
                "config",
                "trading",
                "sap",
                "dotnet",
                "java",
                "web"
            ]
        },
        "variables": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "type",
                    "description",
                    "required"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "required": {
                        "type": "boolean"
                    },
                    "default": {
                        "type": "string"
                    }
                }
            },
            "minItems": 1,
            "description": "Template variables with types and descriptions"
        },
        "produces": {
            "type": "string",
            "description": "What type of file this template produces"
        },
        "used_by_skills": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "used_by_blueprints": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        }
    }
}
