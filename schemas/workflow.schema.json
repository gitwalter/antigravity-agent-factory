{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cursor-agent-factory.dev/schemas/workflow.schema.json",
    "title": "Workflow Metadata Schema",
    "description": "Schema for workflow markdown file frontmatter in {directories.workflows}/**/*.md",
    "type": "object",
    "required": [
        "name",
        "description",
        "version",
        "type",
        "domain",
        "steps",
        "agents",
        "blueprints"
    ],
    "additionalProperties": true,
    "properties": {
        "name": {
            "type": "string",
            "minLength": 3,
            "description": "Unique workflow identifier"
        },
        "description": {
            "type": "string",
            "minLength": 20,
            "description": "What this workflow accomplishes"
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "type": {
            "type": "string",
            "enum": [
                "supervisor",
                "sequential",
                "parallel",
                "hierarchical",
                "iterative",
                "pipeline"
            ],
            "description": "Workflow execution pattern"
        },
        "domain": {
            "type": "string",
            "enum": [
                "ai-ml",
                "agile",
                "blockchain",
                "dotnet",
                "java",
                "operations",
                "python",
                "quality",
                "sap",
                "trading",
                "typescript",
                "universal"
            ],
            "description": "Domain this workflow belongs to"
        },
        "steps": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "description"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "agent": {
                        "type": "string"
                    },
                    "tools": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "outputs": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "minItems": 2,
            "description": "Workflow steps"
        },
        "agents": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "description": "Agents used in this workflow"
        },
        "blueprints": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "description": "Blueprints that include this workflow"
        },
        "triggers": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Events that trigger this workflow"
        },
        "prerequisites": {
            "type": "object",
            "description": "Prerequisites for running this workflow"
        }
    }
}