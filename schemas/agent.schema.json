{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cursor-agent-factory.dev/schemas/agent.schema.json",
    "title": "Cursor Agent Schema",
    "description": "Schema for Cursor agent YAML frontmatter in {directories.agents}/*.md files",
    "type": "object",
    "required": [
        "name",
        "description",
        "type",
        "version",
        "domain",
        "skills",
        "knowledge",
        "tools",
        "workflows",
        "blueprints"
    ],
    "additionalProperties": true,
    "properties": {
        "name": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "minLength": 3,
            "description": "Unique agent identifier matching filename without .md"
        },
        "description": {
            "type": "string",
            "minLength": 20,
            "description": "Detailed description of agent purpose and capabilities"
        },
        "type": {
            "const": "agent"
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Semantic version of the agent"
        },
        "domain": {
            "type": "string",
            "enum": [
                "ai-ml",
                "development",
                "testing",
                "review",
                "documentation",
                "debugging",
                "deployment",
                "analysis",
                "orchestration",
                "trading",
                "sap",
                "dotnet",
                "java",
                "web",
                "devops",
                "onboarding",
                "factory"
            ],
            "description": "Primary domain of the agent"
        },
        "skills": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^[a-z0-9-]+(\\/[a-z0-9-]+)*$"
            },
            "minItems": 2,
            "description": "Skills this agent uses (minimum 2)"
        },
        "knowledge": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^[a-z0-9-]+\\.json$"
            },
            "minItems": 2,
            "description": "Knowledge files this agent references (minimum 2)"
        },
        "tools": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "description": "Tools this agent can use (use ['none'] if no tools)"
        },
        "workflows": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "description": "Workflows this agent participates in (use ['none'] if standalone)"
        },
        "blueprints": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "description": "Blueprints that include this agent"
        },
        "mcp_servers": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "MCP servers this agent uses"
        },
        "agent_team": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Other agents this agent coordinates with"
        }
    }
}