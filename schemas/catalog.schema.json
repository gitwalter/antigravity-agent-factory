{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://antigravity-agent-factory.dev/schemas/catalog.schema.json",
    "title": "Catalog Schema",
    "description": "Schema for auto-generated catalog files",
    "type": "object",
    "required": [
        "$schema",
        "title",
        "description",
        "version",
        "category",
        "content"
    ],
    "additionalProperties": true,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "title": {
            "type": "string",
            "minLength": 5
        },
        "description": {
            "type": "string",
            "minLength": 10
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "category": {
            "type": "string",
            "const": "catalogs"
        },
        "metadata": {
            "type": "object"
        },
        "content": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "id",
                        "name",
                        "location"
                    ],
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "location": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
