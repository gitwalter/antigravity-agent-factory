{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cursor-agent-factory.dev/pabp/v1/template.schema.json",
    "title": "PABP Template Description",
    "description": "Structured description of a template for cross-system transfer",
    "type": "object",
    "required": [
        "$pabp",
        "$type",
        "name"
    ],
    "properties": {
        "$pabp": {
            "type": "string",
            "const": "1.0.0"
        },
        "$type": {
            "type": "string",
            "const": "template"
        },
        "name": {
            "type": "string",
            "description": "Unique template identifier"
        },
        "description": {
            "type": "string",
            "description": "Brief description of the template"
        },
        "language": {
            "type": "string",
            "description": "Programming or markup language for this template"
        },
        "content": {
            "type": "string",
            "description": "The template content"
        },
        "variables": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "type"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Variable name"
                    },
                    "type": {
                        "type": "string",
                        "description": "Variable type"
                    },
                    "default": {
                        "type": "string",
                        "description": "Default value for the variable"
                    },
                    "description": {
                        "type": "string",
                        "description": "Description of what this variable represents"
                    }
                }
            },
            "description": "Array of template variables"
        }
    }
}
