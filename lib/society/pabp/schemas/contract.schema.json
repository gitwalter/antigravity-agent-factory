{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cursor-agent-factory.dev/pabp/v1/contract.schema.json",
    "title": "PABP Contract Description",
    "description": "Structured description of a contract for cross-system transfer",
    "type": "object",
    "required": [
        "$pabp",
        "$type",
        "name"
    ],
    "properties": {
        "$pabp": {
            "type": "string",
            "const": "1.0.0"
        },
        "$type": {
            "type": "string",
            "const": "contract"
        },
        "name": {
            "type": "string",
            "description": "Unique contract identifier"
        },
        "description": {
            "type": "string",
            "description": "Brief description of the contract"
        },
        "parties": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of parties involved in this contract"
        },
        "obligations": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of obligations defined in this contract"
        },
        "permissions": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of permissions granted by this contract"
        },
        "prohibitions": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of prohibitions defined in this contract"
        },
        "validity": {
            "type": "object",
            "properties": {
                "from": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Contract validity start date"
                },
                "until": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Contract validity end date"
                }
            },
            "description": "Validity period for this contract"
        }
    }
}