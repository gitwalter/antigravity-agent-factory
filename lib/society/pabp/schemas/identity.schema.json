{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://antigravity-agent-factory.dev/pabp/v1/identity.schema.json",
    "title": "PABP Identity Description",
    "description": "Structured description of an agent identity for cross-system transfer",
    "type": "object",
    "required": [
        "$pabp",
        "$type",
        "agent_id"
    ],
    "properties": {
        "$pabp": {
            "type": "string",
            "const": "1.0.0"
        },
        "$type": {
            "type": "string",
            "const": "identity"
        },
        "agent_id": {
            "type": "string",
            "pattern": "^did:",
            "description": "DID (Decentralized Identifier) for the agent"
        },
        "agent_name": {
            "type": "string",
            "description": "Human-readable name of the agent"
        },
        "public_key": {
            "type": "string",
            "description": "Public key associated with this identity"
        },
        "capabilities": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of capabilities this agent possesses"
        },
        "reputation_snapshot": {
            "type": "object",
            "properties": {
                "score": {
                    "type": "number",
                    "description": "Reputation score"
                },
                "trust_level": {
                    "type": "string",
                    "description": "Trust level classification"
                },
                "total_tasks": {
                    "type": "integer",
                    "description": "Total number of tasks completed"
                }
            },
            "description": "Snapshot of the agent's reputation at time of transfer"
        }
    }
}
