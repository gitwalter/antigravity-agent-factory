{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cursor-agent-factory.dev/pabp/v1/protocol.schema.json",
    "title": "PABP Protocol Description",
    "description": "Structured description of a protocol for cross-system transfer",
    "type": "object",
    "required": [
        "$pabp",
        "$type",
        "name",
        "description"
    ],
    "properties": {
        "$pabp": {
            "type": "string",
            "const": "1.0.0"
        },
        "$type": {
            "type": "string",
            "const": "protocol"
        },
        "name": {
            "type": "string",
            "description": "Unique protocol identifier"
        },
        "description": {
            "type": "string",
            "description": "Brief description of the protocol"
        },
        "version": {
            "type": "string",
            "description": "Protocol version identifier"
        },
        "states": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of possible states in this protocol"
        },
        "transitions": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "from",
                    "to"
                ],
                "properties": {
                    "from": {
                        "type": "string",
                        "description": "Source state"
                    },
                    "to": {
                        "type": "string",
                        "description": "Target state"
                    },
                    "trigger": {
                        "type": "string",
                        "description": "Event or condition that triggers this transition"
                    }
                }
            },
            "description": "Array of state transitions"
        },
        "messages": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "description": "Message type identifier"
                    },
                    "schema": {
                        "type": "object",
                        "description": "Message schema definition"
                    },
                    "description": {
                        "type": "string",
                        "description": "Description of the message type"
                    }
                }
            },
            "description": "Array of message type definitions"
        }
    }
}