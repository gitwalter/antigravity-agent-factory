{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cursor-agent-factory.dev/pabp/v1/skill.schema.json",
    "title": "PABP Skill Description",
    "description": "Structured description of an agent skill for cross-system transfer",
    "type": "object",
    "required": [
        "$pabp",
        "$type",
        "name",
        "description"
    ],
    "properties": {
        "$pabp": {
            "type": "string",
            "const": "1.0.0"
        },
        "$type": {
            "type": "string",
            "const": "skill"
        },
        "name": {
            "type": "string",
            "description": "Unique skill identifier"
        },
        "description": {
            "type": "string",
            "description": "Brief description of the skill"
        },
        "axioms": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Axiom alignment declarations"
        },
        "agents": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Agents that use this skill"
        },
        "knowledge_refs": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Referenced knowledge files"
        },
        "when_to_use": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Usage scenarios"
        },
        "prerequisites": {
            "type": "object",
            "properties": {
                "packages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "knowledge": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "sections": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "title",
                    "content"
                ],
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    },
                    "code_blocks": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "language": {
                                    "type": "string"
                                },
                                "code": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "tooling": {
            "type": "object",
            "description": "External dependencies this component requires to function",
            "properties": {
                "mcp_servers": {
                    "type": "array",
                    "description": "MCP servers this component depends on",
                    "items": {
                        "type": "object",
                        "required": [
                            "name"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean",
                                "default": true
                            },
                            "purpose": {
                                "type": "string"
                            }
                        }
                    }
                },
                "scripts": {
                    "type": "array",
                    "description": "Factory scripts this component depends on",
                    "items": {
                        "type": "object",
                        "required": [
                            "ref"
                        ],
                        "properties": {
                            "ref": {
                                "type": "string",
                                "description": "Registry key from component_registry.json scripts section"
                            },
                            "required": {
                                "type": "boolean",
                                "default": true
                            },
                            "purpose": {
                                "type": "string"
                            }
                        }
                    }
                },
                "cli_tools": {
                    "type": "array",
                    "description": "CLI tools required",
                    "items": {
                        "type": "object",
                        "required": [
                            "name"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Key from tools.json"
                            },
                            "min_version": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean",
                                "default": true
                            }
                        }
                    }
                },
                "apis": {
                    "type": "array",
                    "description": "External APIs this component calls",
                    "items": {
                        "type": "object",
                        "required": [
                            "name"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "rest",
                                    "graphql",
                                    "grpc",
                                    "mcp"
                                ]
                            },
                            "url_pattern": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean",
                                "default": false
                            }
                        }
                    }
                }
            }
        },
        "references": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "checksum": {
            "type": "string",
            "pattern": "^sha256:"
        }
    }
}
