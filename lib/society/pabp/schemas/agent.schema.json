{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cursor-agent-factory.dev/pabp/v1/agent.schema.json",
    "title": "PABP Agent Description",
    "description": "Structured description of an agent for cross-system transfer",
    "type": "object",
    "required": [
        "$pabp",
        "$type",
        "name",
        "description"
    ],
    "properties": {
        "$pabp": {
            "type": "string",
            "const": "1.0.0"
        },
        "$type": {
            "type": "string",
            "const": "agent"
        },
        "name": {
            "type": "string",
            "description": "Unique agent identifier"
        },
        "description": {
            "type": "string",
            "description": "Brief description of the agent"
        },
        "purpose": {
            "type": "string",
            "description": "Primary purpose or mission of the agent"
        },
        "philosophy": {
            "type": "string",
            "description": "Philosophical principles guiding the agent"
        },
        "skills": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of skill names this agent possesses"
        },
        "knowledge": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of knowledge references this agent uses"
        },
        "activation": {
            "type": "object",
            "properties": {
                "triggers": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Events or conditions that activate this agent"
                },
                "contexts": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Contexts in which this agent operates"
                }
            }
        },
        "workflow": {
            "type": "object",
            "properties": {
                "steps": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    },
                    "description": "Array of workflow step definitions"
                }
            }
        },
        "constraints": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Constraints or limitations for this agent"
        },
        "system_instructions": {
            "type": "string",
            "description": "System-level instructions for the agent"
        },
        "tooling": {
            "type": "object",
            "description": "External dependencies this component requires to function",
            "properties": {
                "mcp_servers": {
                    "type": "array",
                    "description": "MCP servers this component depends on",
                    "items": {
                        "type": "object",
                        "required": [
                            "name"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean",
                                "default": true
                            },
                            "purpose": {
                                "type": "string"
                            }
                        }
                    }
                },
                "scripts": {
                    "type": "array",
                    "description": "Factory scripts this component depends on",
                    "items": {
                        "type": "object",
                        "required": [
                            "ref"
                        ],
                        "properties": {
                            "ref": {
                                "type": "string",
                                "description": "Registry key from component_registry.json scripts section"
                            },
                            "required": {
                                "type": "boolean",
                                "default": true
                            },
                            "purpose": {
                                "type": "string"
                            }
                        }
                    }
                },
                "cli_tools": {
                    "type": "array",
                    "description": "CLI tools required",
                    "items": {
                        "type": "object",
                        "required": [
                            "name"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Key from tools.json"
                            },
                            "min_version": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean",
                                "default": true
                            }
                        }
                    }
                },
                "apis": {
                    "type": "array",
                    "description": "External APIs this component calls",
                    "items": {
                        "type": "object",
                        "required": [
                            "name"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "rest",
                                    "graphql",
                                    "grpc",
                                    "mcp"
                                ]
                            },
                            "url_pattern": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean",
                                "default": false
                            }
                        }
                    }
                }
            }
        }
    }
}
