{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cursor-agent-factory.dev/pabp/v1/rule.schema.json",
    "title": "PABP Rule Description",
    "description": "Structured description of a rule for cross-system transfer",
    "type": "object",
    "required": [
        "$pabp",
        "$type",
        "name"
    ],
    "properties": {
        "$pabp": {
            "type": "string",
            "const": "1.0.0"
        },
        "$type": {
            "type": "string",
            "const": "rule"
        },
        "name": {
            "type": "string",
            "description": "Unique rule identifier"
        },
        "description": {
            "type": "string",
            "description": "Brief description of the rule"
        },
        "scope": {
            "type": "string",
            "enum": [
                "global",
                "project",
                "file"
            ],
            "description": "Scope of application for this rule"
        },
        "content": {
            "type": "string",
            "description": "The rules text content"
        },
        "format": {
            "type": "string",
            "enum": [
                "markdown",
                "yaml",
                "json"
            ],
            "description": "Format of the rules content"
        },
        "applies_to": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of glob patterns specifying where this rule applies"
        }
    }
}