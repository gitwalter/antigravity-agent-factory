{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://antigravity-agent-factory.dev/pabp/v1/attestation.schema.json",
    "title": "PABP Attestation Description",
    "description": "Structured description of an attestation for cross-system transfer",
    "type": "object",
    "required": [
        "$pabp",
        "$type",
        "name",
        "issuer"
    ],
    "properties": {
        "$pabp": {
            "type": "string",
            "const": "1.0.0"
        },
        "$type": {
            "type": "string",
            "const": "attestation"
        },
        "name": {
            "type": "string",
            "description": "Unique attestation identifier"
        },
        "issuer": {
            "type": "string",
            "pattern": "^did:",
            "description": "DID (Decentralized Identifier) of the issuer"
        },
        "subject": {
            "type": "string",
            "pattern": "^did:",
            "description": "DID (Decentralized Identifier) of the subject"
        },
        "claims": {
            "type": "object",
            "description": "Claims made in this attestation"
        },
        "issued_at": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when the attestation was issued"
        },
        "expires_at": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when the attestation expires"
        },
        "signature": {
            "type": "string",
            "description": "Cryptographic signature of the attestation"
        }
    }
}
