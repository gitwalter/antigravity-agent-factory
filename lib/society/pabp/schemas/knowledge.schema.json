{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://antigravity-agent-factory.dev/pabp/v1/knowledge.schema.json",
    "title": "PABP Knowledge Description",
    "description": "Structured description of knowledge content for cross-system transfer",
    "type": "object",
    "required": [
        "$pabp",
        "$type",
        "name",
        "description"
    ],
    "properties": {
        "$pabp": {
            "type": "string",
            "const": "1.0.0"
        },
        "$type": {
            "type": "string",
            "const": "knowledge"
        },
        "name": {
            "type": "string",
            "description": "Unique knowledge identifier"
        },
        "description": {
            "type": "string",
            "description": "Brief description of the knowledge content"
        },
        "domain": {
            "type": "string",
            "description": "Domain or category this knowledge belongs to"
        },
        "version": {
            "type": "string",
            "description": "Version identifier for this knowledge"
        },
        "content": {
            "type": "object",
            "description": "The actual knowledge payload"
        },
        "metadata": {
            "type": "object",
            "description": "Additional metadata about the knowledge"
        }
    }
}
