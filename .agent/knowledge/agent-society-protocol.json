      "L5_society": {
        "name": "Society",
        "purpose": "Inter-agent coordination within a single agent society",
        "components": [
          "Universal Agent Language (UAL)",
          "Agent Contracts",
          "Event Sourcing",
          "Reputation System"
        ],
        "trust_levels": [
          "L0_local",
          "L1_attested"
        ],
        "artifacts": [
          "society/contracts/",
          "society/events/",
          "society/trust/",
          "society/protocols/"
        ]
      },
      "L6_federation": {
        "name": "Federation",
        "purpose": "Cross-society interoperability",
        "components": [
          "Protocol Translation",
          "Federation Registry",
          "Identity Federation",
          "Capability Discovery"
        ],
        "trust_levels": [
          "L2_contracted"
        ],
        "artifacts": [
          "federation/registry/",
          "federation/bridges/",
          "federation/identity/",
          "federation/contracts/"
        ]
      },
      "L7_economy": {
        "name": "Economy",
