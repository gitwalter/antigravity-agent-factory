{
  "id": "formal-verification",
  "name": "Formal Verification System",
  "version": "1.0.0",
  "description": "Knowledge about the Lean 4 formal verification system for axiom compliance",
  "category": "verification",
  "philosophy": {
    "love": "Free and accessible to all",
    "truth": "Mathematical certainty, verifiable by anyone",
    "beauty": "Elegant, harmonious proof structure"
  },
  "proofSystem": {
    "language": "Lean 4",
    "version": "4.17.0+",
    "buildSystem": "Lake",
    "methodology": "inductive invariants"
  },
  "axiomFormalization": {
    "A0": {
      "name": "Love, Truth, and Beauty",
      "leanType": "FoundationalValue",
      "description": "Foundational values from which all others derive"
    },
    "A1": {
      "name": "Transparency",
      "leanType": "TransparencyProperty",
      "theorem": "satisfiesA1",
      "description": "All AI behavior must be traceable to explicit rules and axioms"
    },
    "A2": {
      "name": "User Primacy",
      "leanType": "IntentType",
      "theorem": "explicit_wins",
      "description": "User's explicitly stated intent takes precedence"
    },
    "A3": {
      "name": "Derivability",
      "leanType": "Derivation",
      "theorem": "satisfiesA3",
      "description": "Every rule must derive from the axiom set"
    },
    "A4": {
      "name": "Non-Harm",
      "leanType": "HarmAssessment",
      "theorem": "irreversible_requires_consent",
      "description": "No irreversible negative impact without explicit consent"
    },
    "A5": {
      "name": "Consistency",
      "leanType": "RuleSet",
      "theorem": "satisfiesA5",
      "description": "No derived rule may contradict axioms"
    }
  },
  "stateMachines": {
    "guardian": {
      "file": "Guardian/States.lean",
      "states": [
        "flow",
        "nudge",
        "pause",
        "block",
        "protect"
      ],
      "properties": [
        "monotonic escalation",
        "state preservation",
        "user notification",
        "alternatives offered",
        "harm prevention"
      ],
      "keyTheorems": [
        "escalation_preserves_state",
        "block_offers_alternatives",
        "protect_preserves_state",
        "wellformed_is_safe"
      ]
    },
    "memory": {
      "file": "Memory/Consent.lean",
      "types": [
        "semantic",
        "episodic",
        "pending",
        "rejected"
      ],
      "properties": [
        "user consent required",
        "layer protection"
      ],
      "keyTheorems": [
        "consent_always_maintained",
        "only_approve_creates_semantic",
        "memory_cannot_modify_layer0"
      ]
    },
    "layers": {
      "file": "Layers/Immutability.lean",
      "layers": {
        "0": {
          "name": "axioms",
          "immutable": true
        },
        "1": {
          "name": "purpose",
          "immutable": true
        },
        "2": {
          "name": "principles",
          "immutable": true
        },
        "3": {
          "name": "methodology",
          "immutable": false
        },
        "4": {
          "name": "technical",
          "immutable": false
        }
      },
      "keyTheorems": [
        "layer0_modifications_blocked",
        "layer1_modifications_blocked",
        "layer2_modifications_blocked",
        "layer_protection_holds"
      ]
    }
  },
  "projectTemplates": {
    "generic": {
      "states": [
        "initial",
        "processing",
        "completed",
        "failed"
      ],
      "description": "Generic state machine template"
    },
    "api": {
      "states": [
        "pending",
        "validating",
        "processing",
        "completed",
        "failed"
      ],
      "description": "API request handling template"
    },
    "trading": {
      "states": [
        "created",
        "validated",
        "submitted",
        "filled",
        "cancelled",
        "rejected"
      ],
      "description": "Trading order template"
    },
    "contract": {
      "states": [
        "deployed",
        "active",
        "paused",
        "deprecated"
      ],
      "description": "Smart contract template"
    },
    "agent": {
      "states": [
        "idle",
        "thinking",
        "acting",
        "reflecting",
        "responding"
      ],
      "description": "AI agent reasoning template"
    }
  },
  "attestation": {
    "methods": [
      {
        "name": "GPG Signing",
        "command": "git tag -s v4.0.0-verified",
        "cost": "free"
      },
      {
        "name": "Sigstore/Cosign",
        "command": "cosign attest --predicate=proofs-verified.json",
        "cost": "free"
      },
      {
        "name": "IPFS",
        "command": "ipfs add attestation.json",
        "cost": "free"
      }
    ],
    "verificationScript": "scripts/verify_proofs.sh",
    "attestationScript": "scripts/generate_attestation.sh"
  },
  "ciIntegration": {
    "workflowFile": ".github/workflows/verify-proofs.yml",
    "triggers": [
      "push",
      "pull_request"
    ],
    "failOnProofError": true,
    "artifactRetention": "90 days"
  },
  "trustChain": {
    "description": "Factory Verified \u2192 Project Inherits \u2192 Team Extends \u2192 Anyone Verifies",
    "levels": [
      {
        "level": 1,
        "name": "Factory Verification",
        "scope": "Core axioms, Guardian, Memory, Layers"
      },
      {
        "level": 2,
        "name": "Project Inheritance",
        "scope": "Inherited proofs from Factory"
      },
      {
        "level": 3,
        "name": "Team Extension",
        "scope": "Project-specific state machines"
      },
      {
        "level": 4,
        "name": "Public Verification",
        "scope": "Anyone can clone and verify"
      }
    ]
  },
  "resources": [
    {
      "name": "Theorem Proving in Lean 4",
      "url": "https://leanprover.github.io/theorem_proving_in_lean4/"
    },
    {
      "name": "Lean 4 Documentation",
      "url": "https://lean-lang.org/documentation/"
    },
    {
      "name": "Mathlib4",
      "url": "https://github.com/leanprover-community/mathlib4"
    }
  ],
  "patterns": {},
  "best_practices": [],
  "anti_patterns": []
}