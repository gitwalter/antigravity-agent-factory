{#
Template Metadata (schema: template.schema.json)
name: mcp-config-cloud.json
description: Generates mcp config cloud.json file for tools development projects
version: 1.0.0
category: tools
produces: JSON data file
variables:
    - project_name: (string) The project name [required]
used_by_skills: [tool-usage, mcp-integration]
used_by_blueprints: [langchain-agent-platform]
#}
{
  "mcpServers": {
    "atlassian-cloud": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-atlassian"],
      "env": {
        "ATLASSIAN_API_TOKEN": "${ATLASSIAN_API_TOKEN}",
        "ATLASSIAN_DOMAIN": "${ATLASSIAN_DOMAIN}",
        "ATLASSIAN_EMAIL": "${ATLASSIAN_EMAIL}"
      }
    }
  }
}
