  "cursorrules": {
    "variables": [
      {
        "name": "JAVA_VERSION",
        "description": "Java version",
        "default": "21+"
      },
      {
        "name": "STYLE_GUIDE",
        "description": "Coding style",
        "default": "google"
      }
    ],
    "rules": [
      {
        "name": "Spring Boot 4.0+",
        "description": "Use Spring Boot 4.0+ with Java 21+ features"
      },
      {
        "name": "Spring Modulith",
        "description": "Consider Spring Modulith for modular monolith architecture"
      },
      {
        "name": "Dependency Injection",
        "description": "Use constructor injection, avoid field injection"
      },
      {
        "name": "REST Controllers",
        "description": "Use @RestController with @RequestMapping for REST APIs"
      },
      {
        "name": "Service Layer",
        "description": "Business logic in @Service classes"
      },
      {
        "name": "Repository Pattern",
        "description": "Use Spring Data JPA repositories"
      },
      {
        "name": "Testing",
        "description": "Write JUnit 5 tests with @SpringBootTest for integration tests"
      }
    ]
  },
