{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Learning Workshop Pattern Schema",
  "description": "Schema for technology learning workshops - structured educational sessions that build developer skills through hands-on practice",
  "version": "1.0.0",
  "philosophy": "Learning is a journey of transformation. Through structured exploration and hands-on practice, developers grow in skill and wisdom.",
  "axiom_alignment": ["A0_love_truth_beauty", "A1_verifiability", "A3_transparency"],
  "type": "object",
  "required": ["workshopId", "name", "technology", "level", "duration", "learning_objectives", "phases", "exercises"],
  "properties": {
    "workshopId": {
      "type": "string",
      "pattern": "^L[0-9]+_[a-z_]+$",
      "description": "Unique identifier following pattern L{number}_{name}",
      "examples": ["L1_ethereum_fundamentals", "L7_langchain_agents"]
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the workshop"
    },
    "technology": {
      "type": "object",
      "properties": {
        "category": {
          "type": "string",
          "enum": ["blockchain", "ai_framework", "web_fullstack", "cloud_native", "data_ml", "enterprise"],
          "description": "Technology category"
        },
        "stack": {
          "type": "string",
          "description": "Specific technology stack (e.g., 'Solana + Anchor', 'LangChain')"
        },
        "language": {
          "type": "string",
          "description": "Primary programming language"
        },
        "version": {
          "type": "string",
          "description": "Version of the technology covered"
        }
      }
    },
    "level": {
      "type": "string",
      "enum": ["fundamentals", "intermediate", "advanced"],
      "description": "Skill level required and taught"
    },
    "prerequisites": {
      "type": "object",
      "properties": {
        "workshops": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Prior workshops that should be completed"
        },
        "knowledge": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Required background knowledge"
        },
        "tools": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Tools that must be installed"
        }
      }
    },
    "duration": {
      "type": "object",
      "properties": {
        "total_hours": {"type": "number"},
        "concept_minutes": {"type": "integer", "default": 30},
        "demo_minutes": {"type": "integer", "default": 30},
        "exercise_minutes": {"type": "integer", "default": 45},
        "challenge_minutes": {"type": "integer", "default": 30},
        "reflection_minutes": {"type": "integer", "default": 15}
      }
    },
    "learning_objectives": {
      "type": "array",
      "minItems": 3,
      "maxItems": 7,
      "items": {
        "type": "object",
        "properties": {
          "objective": {"type": "string"},
          "bloom_level": {
            "type": "string",
            "enum": ["remember", "understand", "apply", "analyze", "evaluate", "create"],
            "description": "Bloom's taxonomy level"
          },
          "verification": {"type": "string", "description": "How to verify the objective is met"}
        }
      },
      "description": "What participants will learn (3-7 objectives)"
    },
    "knowledge_files": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Related knowledge files that support this workshop"
    },
    "phases": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "phaseId": {"type": "string"},
          "name": {"type": "string"},
          "type": {
            "type": "string",
            "enum": ["concept", "demo", "exercise", "challenge", "reflection", "break"]
          },
          "duration_minutes": {"type": "integer"},
          "description": {"type": "string"},
          "content": {
            "type": "object",
            "properties": {
              "topics": {"type": "array", "items": {"type": "string"}},
              "diagrams": {"type": "array", "items": {"type": "string"}},
              "code_examples": {"type": "array", "items": {"type": "string"}},
              "key_points": {"type": "array", "items": {"type": "string"}}
            }
          },
          "facilitator_notes": {"type": "string"},
          "common_questions": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "exercises": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "exerciseId": {"type": "string"},
          "name": {"type": "string"},
          "type": {
            "type": "string",
            "enum": ["guided", "independent", "pair", "group"]
          },
          "difficulty": {
            "type": "string",
            "enum": ["easy", "medium", "hard"]
          },
          "duration_minutes": {"type": "integer"},
          "description": {"type": "string"},
          "starter_code": {"type": "string"},
          "solution_code": {"type": "string"},
          "hints": {"type": "array", "items": {"type": "string"}},
          "verification": {"type": "string", "description": "How to verify completion"},
          "common_mistakes": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "challenges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "challengeId": {"type": "string"},
          "name": {"type": "string"},
          "description": {"type": "string"},
          "requirements": {"type": "array", "items": {"type": "string"}},
          "evaluation_criteria": {"type": "array", "items": {"type": "string"}},
          "stretch_goals": {"type": "array", "items": {"type": "string"}}
        }
      },
      "description": "Independent challenges to test understanding"
    },
    "resources": {
      "type": "object",
      "properties": {
        "official_docs": {"type": "array", "items": {"type": "string"}},
        "tutorials": {"type": "array", "items": {"type": "string"}},
        "videos": {"type": "array", "items": {"type": "string"}},
        "books": {"type": "array", "items": {"type": "string"}},
        "community": {"type": "array", "items": {"type": "string"}}
      }
    },
    "assessment": {
      "type": "object",
      "properties": {
        "knowledge_check": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "question": {"type": "string"},
              "type": {"type": "string", "enum": ["multiple_choice", "true_false", "short_answer", "code"]},
              "answer": {"type": "string"},
              "explanation": {"type": "string"}
            }
          }
        },
        "practical_assessment": {"type": "string", "description": "Hands-on task to demonstrate mastery"},
        "self_assessment": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Reflection questions for self-evaluation"
        }
      }
    },
    "next_steps": {
      "type": "object",
      "properties": {
        "next_workshop": {"type": "string"},
        "practice_projects": {"type": "array", "items": {"type": "string"}},
        "deeper_learning": {"type": "array", "items": {"type": "string"}}
      }
    },
    "axiom_zero_integration": {
      "type": "object",
      "properties": {
        "love_moments": {
          "type": "array",
          "items": {"type": "string"},
          "description": "How the workshop shows care for learners"
        },
        "truth_moments": {
          "type": "array",
          "items": {"type": "string"},
          "description": "How the workshop emphasizes accuracy and verification"
        },
        "beauty_moments": {
          "type": "array",
          "items": {"type": "string"},
          "description": "How the workshop celebrates elegant solutions"
        }
      }
    }
  },
  "standard_phase_structure": {
    "description": "Recommended phase structure for learning workshops",
    "phases": [
      {
        "name": "Concept",
        "duration_minutes": 30,
        "purpose": "Introduce theory with diagrams and explanations"
      },
      {
        "name": "Demo",
        "duration_minutes": 30,
        "purpose": "Live coding walkthrough of key concepts"
      },
      {
        "name": "Exercise",
        "duration_minutes": 45,
        "purpose": "Guided hands-on practice"
      },
      {
        "name": "Challenge",
        "duration_minutes": 30,
        "purpose": "Independent problem-solving"
      },
      {
        "name": "Reflection",
        "duration_minutes": 15,
        "purpose": "Key takeaways and next steps"
      }
    ]
  },
  "quality_checklist": [
    "All code examples are tested and working",
    "Learning objectives are measurable",
    "Exercises have clear success criteria",
    "Resources link to official documentation",
    "Common mistakes are documented",
    "Axiom 0 moments are integrated naturally"
  ]
}
