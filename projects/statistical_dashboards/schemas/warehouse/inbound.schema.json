{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Warehouse Inbound Operations Schema",
    "description": "Schema for validating Amazon SP-API and SAP EWM inbound fulfillment data.",
    "type": "object",
    "required": [
        "Purchase_Order_ID",
        "SKU",
        "Expected_Qty",
        "Received_Qty",
        "Arrival_Timestamp",
        "Receive_Timestamp",
        "Stow_Timestamp"
    ],
    "properties": {
        "Purchase_Order_ID": {
            "type": "string",
            "description": "Unique identifier for the incoming purchase order (e.g., /SCDL/DB_PROCH_I or Amazon PO)."
        },
        "SKU": {
            "type": "string",
            "description": "Stock Keeping Unit or Item ID."
        },
        "Expected_Qty": {
            "type": "integer",
            "minimum": 0
        },
        "Received_Qty": {
            "type": "integer",
            "minimum": 0
        },
        "Arrival_Timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of dock arrival."
        },
        "Receive_Timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of receiving scan."
        },
        "Stow_Timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of final putaway/stow."
        }
    }
}
