{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Warehouse Outbound Fulfillment Schema",
    "description": "Schema for validating pick, pack, and ship data (e.g., ORDIM_C).",
    "type": "object",
    "required": [
        "Order_ID",
        "Worker_ID",
        "Order_Creation_Timestamp",
        "Pick_Start_Timestamp",
        "Pick_End_Timestamp",
        "Pack_Timestamp",
        "Carrier_Scan_Timestamp",
        "Carrier_SLA"
    ],
    "properties": {
        "Order_ID": {
            "type": "string",
            "description": "Unique identifier for the outbound order or shipment."
        },
        "Worker_ID": {
            "type": "string",
            "description": "ID of the associate or station performing the work."
        },
        "Order_Creation_Timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "Pick_Start_Timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "Pick_End_Timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "Pack_Timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "Carrier_Scan_Timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of last-mile handoff/sortation."
        },
        "Carrier_SLA": {
            "type": "string",
            "description": "The expected carrier Service Level Agreement or shipping method (e.g., Next Day, Ground)."
        }
    }
}
